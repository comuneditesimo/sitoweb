@using ICWebApp.Components.Components.Breadcrumb.Frontend

<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(FrontendLayout)">
            <Authorizing></Authorizing>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
    </Found>
    <NotFound>
        <PageTitle>Comunix</PageTitle>
        <LayoutView Layout="@typeof(FrontendLayout)">
            <HideLoader></HideLoader>
            <ClearBreadcrumb></ClearBreadcrumb>
            <ICWebApp.Components.Pages.Errors.NotFound></ICWebApp.Components.Pages.Errors.NotFound>
        </LayoutView>
    </NotFound>
</Router>
