@page "/404"

@layout FrontendLayout


<div class="container mt-5 mb-5 error-page-container">
    <div class="row">
        <div class="col-12 col-lg-3">
            <div class="error-page-icon">
                <i class="fa-regular fa-cloud-question"></i>
            </div>
        </div>
        <div class="col-12 col-lg-9">
            @TEXTProvider.Get("PAGE_NOT_FOUND_CONTENT")
            <br />
            <div class="btn btn-primary mt-5" @onclick="OnClick">@TEXTProvider.Get("PAGE_NOT_FOUND_BUTTON")</div>
        </div>
    </div>
</div>