@page "/Hp/Person/{ID}"

@using ICWebApp.Components.Components.Homepage.Frontend.Questionnaire
@using ICWebApp.Components.Components.Homepage.Frontend.Help
@using ICWebApp.Components.Components.Homepage.Frontend.Authority
@using ICWebApp.Components.Components.Homepage.Frontend.Person
@using ICWebApp.Components.Components.Homepage.Frontend.Documents
@using ICWebApp.Components.Components.Homepage.Frontend.Address
@using ICWebApp.Components.Components.Homepage.Frontend.Venue
@using ICWebApp.Components.Components.Homepage.Frontend.Organisation
@using ICWebApp.Components.Components.Homepage.Frontend.Association

@if (Item != null)
{
    @if (Item.FILE_FileImage_ID != null)
    {
        <div class="container-fluid my-3">
            <div class="row">
                <figure class="figure px-0 img-full">
                    <img src="@ImageHelper.GetFilePath(Item.FILE_FileImage_ID.Value)" class="figure-img img-fluid" alt="@Item.Fullname" title="@Item.Fullname">
                </figure>
            </div>
        </div>
    }
    <div class="container">
        <div class="row border-top border-light row-column-border row-column-menu-left">
            <aside class="col-lg-4">
                <AnchorList></AnchorList>
            </aside>
            <section class="col-lg-8 it-page-sections-container border-light">
                @if (!StringHelper.MarkupStringIsNullOrWhiteSpace(Item.Description))
                {
                    <Anchor Title="@TextProvider.Get("FRONTEND_HOMEPAGE_NEWS_DESCRIPTION")" ID="descrizione" Order="0">
                        <div class="richtext-wrapper lora">
                            @((MarkupString)Item.Description)                      
                        </div>
                    </Anchor>
                }
                @if (!StringHelper.MarkupStringIsNullOrWhiteSpace(Item.AreaOfWork))
                {
                    <Anchor Title="@TextProvider.Get("FRONTEND_HOMEPAGE_PERSON_AREAOFWORK")" ID="area-of-work" Order="1">
                        <div class="richtext-wrapper lora">
                            @((MarkupString)Item.AreaOfWork)
                        </div>
                    </Anchor>
                }
                @if (!StringHelper.MarkupStringIsNullOrWhiteSpace(Item.Tasks))
                {
                    <Anchor Title="@TextProvider.Get("FRONTEND_HOMEPAGE_PERSON_TASKS")" ID="tasks" Order="3">
                        <div class="richtext-wrapper lora">
                            @((MarkupString)Item.Tasks)
                        </div>
                    </Anchor>
                }
                @if (Authorities != null && Authorities.Any())
                {
                    <Anchor Title="@TextProvider.Get("FRONTEND_HOMEPAGE_AUTHORITIES")" ID="uffici" Order="2">
                        <div class="row">
                            @foreach (var p in Authorities.OrderBy(p => p.Title).ToList())
                            {
                                <AuthorityItemSmall Authority="@p"></AuthorityItemSmall>
                            }
                        </div>
                    </Anchor>
                }
                @if (Associations != null && Associations.Any())
                {
                    <Anchor Title="@TextProvider.Get("FRONTEND_HOMEPAGE_ASSOCIATIONS")" ID="associazioni" Order="3">
                        <div class="row">
                            @foreach (var p in Associations.OrderBy(p => p.Title).ToList())
                            {
                                <AssociationItemSmall Association="@p"></AssociationItemSmall>
                            }
                        </div>
                    </Anchor>
                }
                @if (Organisations != null && Organisations.Any())
                {
                    <Anchor Title="@TextProvider.Get("FRONTEND_HOMEPAGE_ORGANISATION")" ID="organi" Order="4">
                        <div class="row">
                            @foreach (var p in Organisations.OrderBy(p => p.Title).ToList())
                            {
                                <OrganisationItemSmall Organisation="@p"></OrganisationItemSmall>
                            }
                        </div>
                    </Anchor>
                }
                @if (Venues != null && Venues.Any())
                {
                    <Anchor Title="@TextProvider.Get("FRONTEND_HOMEPAGE_VENUES")" ID="venues" Order="5">
                        <div class="row">
                            @foreach (var p in Venues.OrderBy(p => p.Title).ToList())
                            {
                                <VenueItemSmall Venue="@p"></VenueItemSmall>
                            }
                        </div>
                    </Anchor>
                }
                @if (Documents != null && Documents.Any())
                {
                    <Anchor Title="@TextProvider.Get("FRONTEND_HOMEPAGE_NEWS_DOCUMENTS")" ID="documents" Order="6">
                        <div class="row">
                            @foreach (var doc in Documents)
                            {
                                <DocumentsItemSmall Document="@doc"></DocumentsItemSmall>
                            }
                        </div>
                    </Anchor>
                }
                @if (Item != null && Item.AllowOfficeHours == true && PersonOfficeHours != null)
                {
                    <Anchor Title="@TextProvider.Get("HOMEPAGE_PERSON_OFFICE_HOURS")" ID="officehours" Order="21">
                        @foreach(var weekday in PersonOfficeHours.Select(p => p.Weekday).Distinct().OrderBy(p => p).ToList())
                        {
                            @if (PersonOfficeHours.Where(p => p.Weekday == weekday).Any())
                            {
                                <div class="frontend-office-hours-item">
                                    <div class="frontend-weekday">
                                        @if(weekday == 0)
                                        {
                                            @TextProvider.Get("MONDAY")
                                        }
                                        else if(weekday == 1)
                                        {
                                            @TextProvider.Get("TUESDAY")
                                        }
                                        else if(weekday == 2)
                                        {
                                            @TextProvider.Get("WEDNESDAY")
                                        }
                                        else if (weekday == 3)
                                        {
                                            @TextProvider.Get("THURSDAY")
                                        }
                                        else if(weekday == 4)
                                        {
                                            @TextProvider.Get("FRIDAY")
                                        }
                                        else if (weekday == 5)
                                        {
                                            @TextProvider.Get("SATURDAY")
                                        }
                                    </div>
                                    <div class="frontend-office-hours-time-container">
                                        @foreach (var hours in PersonOfficeHours.Where(p => p.Weekday == weekday).ToList())
                                        {
                                            @if(hours.TimeFrom != null && hours.TimeTo != null)
                                            {
                                                <div class="frontend-office-hours-time">
                                                    @hours.TimeFrom.Value.ToString("HH:mm") - @hours.TimeTo.Value.ToString("HH:mm") @TextProvider.Get("TIME")
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            }
                        }    
                    </Anchor>
                }
                @if (Item != null && Item.AllowTimeslots == true)
                {
                    <Anchor Title="@TextProvider.Get("HOMEPAGE_PERSON_REQUEST_APPOINTMENT")" ID="access" Order="22" CSS="mb-30 has-bg-grey p-4">
                        <p class="text-paragraph lora mb-4" data-element="service-generic-access">@TextProvider.Get("HOMEPAGE_PERSON_REQUEST_APPOINTMENT_DESCRIPTION")</p>
                        <button type="button" class="btn btn-primary mobile-full" @onclick="RequestAppointment" @onclick:stopPropagation="true" data-element="service-online-access">
                            <span class="">@TextProvider.Get("HOMEPAGE_PERSON_REQUEST_APPOINTMENT_BUTTON")</span>
                        </button>
                    </Anchor>
                }
                @if (Item != null && string.IsNullOrEmpty(Item.PhoneNr) ||
               !string.IsNullOrEmpty(Item.EMail) ||
               !string.IsNullOrEmpty(Item.PECEmail) || 
               !string.IsNullOrEmpty(Item.PhoneNrMobile) ||
               !string.IsNullOrEmpty(Item.PhoneNrPrivat) ||
               (Municipality != null && !string.IsNullOrEmpty(Municipality.Mail))
               )
                {
                    <Anchor Title="@TextProvider.Get("FRONTEND_HOMEPAGE_CONTACT")" ID="contatto" Order="23">
                        @if (!string.IsNullOrEmpty(Item.PhoneNr))
                        {
                            <div class="cmp-icon-link contact-title">
                                <strong>@TextProvider.Get("FRONTEND_HOMEPAGE_CONTACT_PHONE")</strong>
                                <a class="list-item icon-left" href="tel:@Item.PhoneNr" aria-label="Telefono">
                                    <span class="list-item-title-icon-wrapper">
                                        <span class="list-item t-primary">@Item.PhoneNr</span>
                                    </span>
                                </a>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Item.PhoneNrPrivat))
                        {
                            <div class="cmp-icon-link mt-2 contact-title">
                                <strong>@TextProvider.Get("FRONTEND_HOMEPAGE_CONTACT_PHONE_PRIVATE")</strong>
                                <a class="list-item icon-left" href="tel:@Item.PhoneNrPrivat" aria-label="Telefono">
                                    <span class="list-item-title-icon-wrapper">
                                        <span class="list-item t-primary">@Item.PhoneNrPrivat</span>
                                    </span>
                                </a>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Item.PhoneNrMobile))
                        {
                            <div class="cmp-icon-link mt-2 contact-title">
                                <strong>@TextProvider.Get("FRONTEND_HOMEPAGE_CONTACT_PHONE_MOBILE")</strong>
                                <a class="list-item icon-left" href="tel:@Item.PhoneNrMobile" aria-label="Telefono">
                                    <span class="list-item-title-icon-wrapper">
                                        <span class="list-item t-primary">@Item.PhoneNrMobile</span>
                                    </span>
                                </a>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Item.EMail))
                        {
                            <div class="cmp-icon-link mt-2 contact-title">
                                <strong>@TextProvider.Get("FRONTEND_HOMEPAGE_CONTACT_EMAIL")</strong>
                                <a class="list-item icon-left" href="mailto:@Item.EMail" aria-label="E-Mail">
                                    <span class="list-item-title-icon-wrapper">
                                        <span class="list-item t-primary">@Item.EMail</span>
                                    </span>
                                </a>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Item.EMail2))
                        {
                            <div class="cmp-icon-link mt-2 contact-title">
                                <strong>@TextProvider.Get("FRONTEND_HOMEPAGE_CONTACT_EMAIL_SECONDARY")</strong>
                                <a class="list-item icon-left" href="mailto:@Item.EMail2" aria-label="E-Mail">
                                    <span class="list-item-title-icon-wrapper">
                                        <span class="list-item t-primary">@Item.EMail2</span>
                                    </span>
                                </a>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Item.PECEmail))
                        {
                            <div class="cmp-icon-link mt-2 contact-title">
                                <strong>@TextProvider.Get("FRONTEND_HOMEPAGE_CONTACT_EMAIL_PEC")</strong>
                                <a class="list-item icon-left" href="mailto:@Item.PECEmail" aria-label="PEC E-Mail">
                                    <span class="list-item-title-icon-wrapper">
                                        <span class="list-item t-primary">@Item.PECEmail</span>
                                    </span>
                                </a>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Item.Fullname))
                        {
                            <div class="mt-5">
                                <a target="_blank" href="@ContactHelper.GetFilePath(Item.Fullname, Item.Gender, Item.AreaOfWork, null, null, Item.PhoneNr, Item.PhoneNrPrivat, Item.PhoneNrPrivat, Item.EMail, Item.PECEmail)" class="btn btn-outline-primary btn-icon">
                                    <svg class="icon icon-primary" aria-hidden="true">
                                        <use xlink:href="css/bootstrap-italia/svg/sprites.svg#it-plus-circle"></use>
                                    </svg>
                                    <span>@TextProvider.Get("FRONTEND_HOMEPAGE_CONTACT_ADD_TO_CONTACTS")</span>
                                </a>
                            </div>
                        }
                    </Anchor>
                }                
                @if (!string.IsNullOrEmpty(Item.Address))
                {
                    <Anchor Title="@TextProvider.Get("FRONTEND_HOMEPAGE_ADDRESS_CONTAINER")" ID="indirizzo" Order="8">
                        <Map Address="@Item.Address"
                             Room="@Item.Room"
                             Latitude="@Item.Lat"
                             Longitude="@Item.Lang" />
                    </Anchor>
                }                
                @if (Item.LastChangeDate != null)
                {
                    <article id="ultimo-aggiornamento" class="it-page-section mt-5">
                        <h4 class="h6">
                            @TextProvider.Get("FRONTEND_CONTENT_LAST_MODIFICATION")
                            <span class="h6 fw-normal">@Item.LastChangeDate.Value.ToString("dd/MM/yyyy, HH:mm")</span>
                        </h4>
                    </article>
                }
            </section>
        </div>
    </div>
}