@page "/Backend/Homepage/Media/Edit/{ID}"

@layout MainLayout

@using ICWebApp.Components.Components.Homepage.Backend.Documents


@if(Data != null)
{
    <EditForm Model="Data">
        <DataAnnotationsValidator />
        <div class="form-group">
            <div class="segment-title custom-color-primary">@TextProvider.Get("BACKEND_HOMEPAGE_MEDIA_GENERAL")</div>
        </div>
        <div class="small-element-separator"></div>
        <LanguageInputSelector @bind-CurrentLanguage="@CurrentLanguage"></LanguageInputSelector>
        <div class="small-element-separator"></div>
        <div class="form-group form-group-small">
            <label class="form-label">@TextProvider.Get("MAINMENU_BACKEND_HOMEPAGE_MEDIA_TITLE")</label>
            @if (Data.HOME_Media_Extended != null && Data.HOME_Media_Extended.Count() > 0 && CurrentLanguage != null)
            {
                <label class="font-detail">@Data.HOME_Media_Extended.FirstOrDefault(p => p.LANG_Language_ID != CurrentLanguage).Title</label>
            }
            <InputText name="@Guid.NewGuid()" @bind-Value="Data.HOME_Media_Extended.FirstOrDefault(p => p.LANG_Language_ID == CurrentLanguage).Title" class="form-control"></InputText>

        </div>
        <div class="small-element-separator"></div>
        <div class="form-group form-group-small">
            <label class="form-label">@TextProvider.Get("MAINMENU_BACKEND_HOMEPAGE_MEDIA_COPYRIGHT")</label>
            <InputText name="@Guid.NewGuid()" @bind-Value="Data.Copyright" class="form-control"></InputText>
        </div>
        <div class="element-separator"></div>
        <div class="form-group form-group-small">
            <div class="segment-title">@TextProvider.Get("MAINMENU_BACKEND_HOMEPAGE_MEDIA_IMAGE")</div>
        </div>
        <div class="small-element-separator"></div>
        <div class="form-group form-group-small">
            <UploadComponent @bind-FileInfo="ExistingFile" Multiple="false" Accept=".jpg, .png, .webp, .jpeg"></UploadComponent>
        </div>
        <div class="element-separator"></div>
        <div class="form-button-container-separated form-group-small">
            <TelerikButton ButtonType="ButtonType.Button" ThemeColor="Secondary" Icon="SvgIcon.X" Class="k-standalone-button"
                           OnClick="@Cancel">@TextProvider.Get("BUTTON_CANCEL")</TelerikButton>
            <TelerikButton ButtonType="ButtonType.Button" ThemeColor="Primary" Icon="SvgIcon.ArrowRight" Class="k-standalone-button"
                           OnClick="@Save">@TextProvider.Get("BUTTON_SAVE")</TelerikButton>
        </div>
    </EditForm>
}