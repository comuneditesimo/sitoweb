                                                {
                                                    <li><a href="@(NavManager.BaseUri.TrimEnd('/') + "/Hp/Sites/" + ts.ID)" @onclick="@(() => GoToUrl("/hp/Sites/" + ts.ID))" @onclick:stopPropagation="true">@ts.Title</a></li>
                                                }
