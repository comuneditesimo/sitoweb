                            </div>
                        }                       
                    </div>
                    <div class="row">
                        <div class="col-12 footer-items-wrapper">
                            <div class="footer-bottom">
                                <a href="@(NavManager.BaseUri.TrimEnd('/') + "/Hp/Sitemap")" @onclick="@(() => GoToUrl("/hp/Sitemap"))" @onclick:stopPropagation="true">@TextProvider.Get("HOMEPAGE_FOOTER_SITEMAP")</a>
