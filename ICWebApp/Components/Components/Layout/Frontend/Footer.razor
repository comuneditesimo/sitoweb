                                        <li class="list-inline-item">
                                            <a class="p-1 text-white" href="@Municipality.Soc_RSS" target="_blank">
                                                <svg class="icon icon-sm icon-white align-top">
                                                    <use xlink:href="css/bootstrap-italia/svg/sprites.svg#it-rss"></use>
                                                </svg>
                                                <span class="visually-hidden">RSS</span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                                @if (Municipality.ShowGreenSupportNumber == true)
                                {
                                    <h3 class="footer-heading-title footer-heading-second-row">@TextProvider.Get("AGID_FRONTEND_SUPPORT")</h3>
                                    <a href="tel:+39800500552">
                                        <div class="green-number">
                                            @if (System.Globalization.CultureInfo.CurrentCulture.Name.Contains("de-DE"))
                                            {
                                                <img src="images/AGID/Gruene_Nummer_DE.svg" alt="Comunix Grüne Nummer">
                                            }
                                            else
                                            {
                                                <img src="images/AGID/Gruene_Nummer_IT.svg" alt="Comunix numero verde">
                                            }
                                        </div>
                                    </a>
                                }
                            </div>
                        }
                        <div class="col-md-3 footer-items-wrapper">
                            <h3 class="footer-heading-title">@TextProvider.Get("LANDING_ONLINE_DIENSTE")</h3>
                            <ul class="footer-list">
                                @if (AktiveApps != null && AktiveApps.Select(p => p.APP_Application_ID).ToList().Contains(Applications.Forms)) //ONLINE DIENSTE
                                {
                                    <li>
                                        <a @onclick="GoToApplications">@TextProvider.Get("FRONTEND_DASHBOARD_APPLICATIONS")</a>
                                    </li>
                                }
                                @if (AktiveApps != null && AktiveApps.Select(p => p.APP_Application_ID).ToList().Contains(Applications.Canteen)) //MENSA
                                {
                                    <li>
                                        <a @onclick="GoToMensa">@TextProvider.Get("FRONTEND_DASHBOARD_MENSA")</a>
                                    </li>
                                }
                                @if (AktiveApps != null && AktiveApps.Select(p => p.APP_Application_ID).ToList().Contains(Applications.Rooms)) //Raumbuchung
                                {
                                    <li>
                                        <a @onclick="GoToRooms">@TextProvider.Get("FRONTEND_DASHBOARD_ROOMS")</a>
                                    </li>
                                }
                                @if (AktiveApps != null && AktiveApps.Select(p => p.APP_Application_ID).ToList().Contains(Applications.Mantainences)) //Meldungen
                                {
                                    <li>
                                        <a @onclick="GoToNotifications">@TextProvider.Get("FRONTEND_DASHBOARD_NOTIFICATIONS")</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 footer-items-wrapper">
                            <div class="footer-bottom">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @if (SessionWrapper != null && SessionWrapper.CurrentUser != null)
            {
                <div style="display: none !important" id="UserID">
                    @SessionWrapper.CurrentUser.ID
                </div>
            }
        </footer>
    }
}