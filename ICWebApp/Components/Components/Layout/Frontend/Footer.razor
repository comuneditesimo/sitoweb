@if (Municipality != null && MunicipalityFooter != null)
{
    if (IsHomepage)
    {
        <footer class="it-footer" id="footer">
            <div class="it-footer-main">
                <div class="container">
                    <div class="row">
                        <div class="col-12 footer-items-wrapper logo-wrapper">
                            @if (Municipality.EU_Logo_Active == true)
                            {
                                <img class="ue-logo" height="56" width="178" src="images/frontend/logo-eu-inverted.svg" alt="logo Unione Europea">
                            }
                            <div class="it-brand-wrapper">
                                <a href="#">
