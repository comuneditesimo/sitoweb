<AuthorizeView Policy="Citizen">
    <Authorized>
        <div class="container">
            <div class="row mt-lg-80 mt-3 mb-4">
                <div class="col-12">
                    <div class="h2">
                        @TextProvider?.Get("CANTEEN_REQUESTREFUND_COMITTED_SUCCESSFULL")
                    </div>
                    <br />
                    <div class="segment-container">
                        @TextProvider?.Get("CANTEEN_REQUESTREFUND_COMITTED_DESCRIPTION")
                    </div>
                    <div class="element-separator"></div>
                    <div class="segment-button-container">
                        <button class="btn btn-primary" @onclick="@ReturnToPreviousPage">@TextProvider?.Get("BUTTON_BACK_TO_MY_CANTEEN")</button>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <RedirectToLogin RedirectURL="@NavManager?.Uri" />
    </NotAuthorized>
</AuthorizeView>