@if (Authority != null)
{
    if (CssColumn)
    {
        <div class="col-sm-6 col-lg-6 mb-3">
            <div class="card card-teaser card-teaser-info rounded shadow-sm p-3">
                <div class="card-body pe-3">
                    <p class="card-title text-paragraph-regular-medium-semi mb-3">
                        <a class="text-decoration-none" @onclick="OnClick"  data-element="service-area">
                            @Authority.Title
                        </a>
                    </p>
                    @if (!string.IsNullOrEmpty(Authority.Address))
                    {
                        var data = Authority.Address.Replace(", Autonome Provinz Bozen - Südtirol, Italien", "").Split(',').ToList();

                        if (data.Count() > 2)
                        {
                            <div class="card-text no-read">
                                <p class="u-main-black">@data[0] @data[1]</p>
                                <p class="u-main-black">@data[2]</p>
                            </div>
                        }
                        else if(data.Count() > 1)
                        {
                            <div class="card-text no-read">
                                <p class="u-main-black">@data[0] @data[1]</p>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card card-teaser card-teaser-info rounded shadow-sm p-3">
            <div class="card-body pe-3">
                <p class="card-title text-paragraph-regular-medium-semi mb-3">
                    <a class="text-decoration-none" @onclick="OnClick" data-element="service-area">
                        @Authority.Title
                    </a>
                </p>
                @if (!string.IsNullOrEmpty(Authority.Address))
                {
                    var data = Authority.Address.Replace(", Autonome Provinz Bozen - Südtirol, Italien", "").Split(',').ToList();

                    if (data.Count() > 2)
                    {
                        <div class="card-text no-read">
                            <p class="u-main-black">@data[0] @data[1]</p>
                            <p class="u-main-black">@data[2]</p>
                        </div>
                    }
                    else if (data.Count() > 1)
                    {
                        <div class="card-text no-read">
                            <p class="u-main-black">@data[0] @data[1]</p>
                        </div>
                    }
                }
            </div>
        </div>
    }
}