@if (Document != null)
{
    <div class="card card-teaser card-teaser-image card-flex no-after rounded shadow-sm border border-light mb-0">
        <div class="card-image-wrapper with-read-more">
            <div class="card-body p-3">
                <div class="category-top">
                    <span class="text fw-semibold">
                        <a class="text-decoration-none" @onclick="OnClickType" data-focus-mouse="false">@Document.Type</a>
                    </span>
                    @if (Document.ReleaseDate != null)
                    {
                        <span class="data u-grey-light">
                            @Document.ReleaseDate.Value.ToString("dd MMM yy").Replace(".", "")
                        </span>
                    }
                    else if (Document.CreationDate != null)
                    {
                        <span class="data u-grey-light">
                            @Document.CreationDate.Value.ToString("dd MMM yy").Replace(".", "")
                        </span>
                    }
                    else
                    {
                        <span class="data u-grey-light">
                            @DateTime.Today.ToString("dd MMM yy").Replace(".", "")
                        </span>
                    }
                </div>
                <h4 class="card-title text-paragraph-medium u-grey-light">
                    <a @onclick="OnClick" class="text-decoration-none">@Document.Title</a>
                </h4>
                <p class="text-paragraph-card u-grey-light m-0 text-ellipsis"></p>
            </div>
        </div>
    </div>
}